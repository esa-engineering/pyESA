<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Classification Writer"
        Height="800" Width="600"
        MinHeight="550" MinWidth="450"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="True">
    
    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#2D5A8A"/>
        </Style>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main content with scroll -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Visible" Padding="0,0,5,0">
            <StackPanel Margin="0,0,10,0">
                
                <!-- SECTION 1: Classification Source -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ CLASSIFICATION SOURCE" Style="{StaticResource SectionHeader}"/>
                        
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Classification:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="cmbClassification" Grid.Column="1" Style="{StaticResource ComboStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- SECTION 2: Classification Codes -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="ðŸ·ï¸ CLASSIFICATION CODES" Style="{StaticResource SectionHeader}"/>
                        
                        <!-- Search Box -->
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="txtSearch" Grid.Column="1" 
                                     Style="{StaticResource SearchTextBox}"
                                     Text="Search..."
                                     ToolTip="Filter classification codes"/>
                            <Button x:Name="btnClearSearch" Grid.Column="2" 
                                    Content="âœ•" Width="25" Margin="5,0,0,0"
                                    ToolTip="Clear search"/>
                        </Grid>
                        
                        <!-- TreeView -->
                        <TreeView x:Name="treeClassification" 
                                  MinHeight="200" Height="300"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  VirtualizingStackPanel.VirtualizationMode="Recycling"/>
                        
                        <!-- Resize grip for TreeView -->
                        <Thumb x:Name="thumbResize" Height="8" Cursor="SizeNS"
                               HorizontalAlignment="Stretch" 
                               Background="#CCCCCC" Opacity="0.5"
                               ToolTip="Drag to resize list"/>
                        
                        <!-- Compact/Expand buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                            <Button x:Name="btnCompactAll" Content="Compact All" 
                                    Padding="10,3" Margin="0,0,5,0"/>
                            <Button x:Name="btnExpandAll" Content="Expand All" 
                                    Padding="10,3"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- SECTION 3: Target Parameter -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ TARGET PARAMETER" Style="{StaticResource SectionHeader}"/>
                        
                        <!-- Parameter ComboBox -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Parameter:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="cmbParameters" Grid.Column="1" Style="{StaticResource ComboStyle}"/>
                        </Grid>
                        
                        <!-- Syntax ComboBox -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Syntax:" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="cmbSyntax" Grid.Column="1" Style="{StaticResource ComboStyle}">
                                <ComboBoxItem Content="Composed - [Classification]Code:Description" IsSelected="True"/>
                                <ComboBoxItem Content="Code"/>
                                <ComboBoxItem Content="Description"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="30" 
                    Margin="0,0,10,0"/>
            <Button x:Name="btnOk" Content="OK" Width="100" Height="30" 
                    IsEnabled="False"
                    Background="#2D5A8A" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
